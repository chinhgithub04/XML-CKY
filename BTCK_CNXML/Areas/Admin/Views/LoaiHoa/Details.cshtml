@model BTCK_CNXML.Models.LoaiHoa

@{
    ViewData["Title"] = "Chi Tiết Loại Hoa";
}

<div class="card shadow-lg" style="width: 100%; max-width: 800px; margin: 20px auto; border-radius: 20px; box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);">
    <div class="card-body" style="background: #ffffff; padding: 30px; border-radius: 20px; display: flex; flex-direction: column; align-items: center;">

        <!-- Thông tin loại hoa -->
        <div class="form-container w-100">
            <div class="d-flex flex-column align-items-start w-100">
                <!-- Tên loại hoa -->
                <div class="mb-2 w-100">
                    <label class="form-label fw-bold text-muted" style="font-size: 1rem;">Tên loại hoa</label>
                    <p class="form-control-plaintext">@Model.Name</p>
                </div>

                <!-- Mô tả -->
                <div class="mb-2 w-100">
                    <label class="form-label fw-bold text-muted" style="font-size: 1rem;">Mô tả</label>
                    <p class="form-control-plaintext">@Model.Description</p>
                </div>
            </div>

            <!-- Nút Chỉnh sửa và Quay lại -->
            <div class="d-flex justify-content-between w-100 mt-4">
                <a href="/Admin/LoaiHoa/Edit/@Model.Id" class="btn btn-primary text-white px-5 py-3 rounded-pill" style="font-weight: bold;">Chỉnh sửa</a>
                <a href="/Admin/LoaiHoa/Index" class="btn btn-secondary text-white px-5 py-3 rounded-pill" style="font-weight: bold;">Quay lại</a>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-gradient:hover {
        background: linear-gradient(90deg, #ff416c, #ff4b2b);
    }

    .card {
        border-radius: 20px;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
    }

    .form-control-plaintext {
        background-color: transparent;
        border: none;
        color: #555;
        font-weight: 500;
    }

    .form-container {
        margin-top: 15px;
    }

    .form-label {
        font-size: 1rem;
        font-weight: bold;
        color: #555;
    }

    .form-control-plaintext {
        font-size: 1.1rem;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .d-flex.justify-content-center {
        justify-content: center;
        width: 100%;
    }
</style>