   @model BTCK_CNXML.Areas.Admin.ViewModels.AccountVM

@{
    ViewData["Title"] = "Thêm khách hàng";
}

<div class="card shadow-lg" style="width: 100%; max-width: 800px; margin: 20px auto; border-radius: 20px; box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);">
    <div class="card-body" style="background: #ffffff; padding: 30px; border-radius: 20px; display: flex; flex-direction: column; align-items: center;">

        <!-- Form thông tin khách hàng -->
        <div class="form-container w-100" id="createProfile">
            <form asp-action="Create" method="post" enctype="multipart/form-data" autocomplete="off">
                <div class="d-flex flex-column align-items-start w-100">
                    @* Hiển thị lỗi tổng quát *@
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Tên -->
                    <div class="mb-2 w-100">
                        <label for="Name" class="form-label fw-bold text-muted" style="font-size: 1rem;">Tên</label>
                        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required autocomplete="off">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <!-- Email -->
                    <div class="mb-2 w-100">
                        <label for="Email" class="form-label fw-bold text-muted" style="font-size: 1rem;">Email</label>
                        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required autocomplete="off">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Số điện thoại -->
                    <div class="mb-2 w-100">
                        <label for="PhoneNumber" class="form-label fw-bold text-muted" style="font-size: 1rem;">Số điện thoại</label>
                        <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" required autocomplete="off">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <!-- Mật khẩu -->
                    <div class="mb-2 w-100">
                        <label for="Password" class="form-label fw-bold text-muted" style="font-size: 1rem;">Mật khẩu</label>
                        <input type="password" class="form-control" id="Password" name="Password" value="@Model.Password" required autocomplete="off">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!-- Upload Avatar -->
                    <div class="mb-2 w-100">
                        <label for="AvatarUrl" class="form-label fw-bold text-muted" style="font-size: 1rem;">Ảnh đại diện</label>
                        <input type="file" class="form-control" id="AvatarUrl" name="AvatarUrl">
                        <span asp-validation-for="AvatarUrl" class="text-danger"></span>
                    </div>
                </div>

                <!-- Nút Lưu -->
                <div class="d-flex justify-content-between w-100 mt-4">
                    <a href="/Admin/Client/Index" class="btn btn-secondary text-white px-5 py-3 rounded-pill" style="font-weight: bold;">Hủy</a>
                    <button type="submit" class="btn btn-gradient text-white px-5 py-3 rounded-pill" style="background: linear-gradient(90deg, #ff416c, #ff4b2b); font-weight: bold;">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .btn-gradient:hover {
        background: linear-gradient(90deg, #ff416c, #ff4b2b);
    }

    .card {
        border-radius: 20px;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
    }

    .form-control-plaintext {
        background-color: transparent;
        border: none;
        color: #555;
        font-weight: 500;
    }

    .avatar-container {
        width: 150px;
        height: 150px;
        background-color: white;
        border-radius: 50%;
        padding: 5px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .avatar-img {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover;
    }

    .form-container {
        margin-top: 15px;
    }

    .form-label {
        font-size: 1rem;
        font-weight: bold;
        color: #555;
    }

    .form-control-plaintext {
        font-size: 1.1rem;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .d-flex.justify-content-center {
        justify-content: center;
        width: 100%;
    }
</style>
