@model IEnumerable<User>

<div class="container my-5">
    <!-- Card bao quanh toàn bộ layout -->
    <div class="card shadow-sm rounded">
        <div class="card-body">
            <!-- Tiêu đề -->
            <h2 class="text-center text-black text-uppercase mb-4">Quản lý khách hàng</h2>

            <!-- Các nút chức năng -->
            <div class="d-flex justify-content-start mb-4">
                <a href="/Admin/Client/Create" class="btn btn-outline-primary custom-btn">
                    <i class="bi bi-person-plus"></i> Thêm khách hàng
                </a>
                <a href="/Admin/Client/UpdateDatabase" class="btn btn-outline-secondary custom-btn mx-2">
                    <i class="bi bi-database"></i> Cập nhật CSDL
                </a>
                <a href="/Admin/Client/Reset" class="btn btn-outline-danger custom-btn">
                    <i class="bi bi-arrow-repeat"></i> Reset dữ liệu
                </a>
                <a href="/Admin/Client/ExportToExcel" class="btn btn-outline-success custom-btn mx-2">
                    <i class="bi bi-file-earmark-excel"></i> Xuất Excel
                </a>
            </div>

            <!-- Bảng quản lý khách hàng -->
            <div class="table-responsive">
                <table id="clientTable" class="table table-striped table-bordered">
                    <thead class="thead-light">
                        <tr>
                            <th>ID</th>
                            <th>Họ và tên</th>
                            <th>Email</th>
                            <th>Số điện thoại</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<style>
    /* Thiết kế chung */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 1200px;
        margin: auto;
        padding: 20px;
    }

    /* Card bao quanh layout */
    .card {
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* Tiêu đề */
    h2 {
        font-size: 30px;
        font-weight: bold;
        color: #007bff;
    }

    /* Nút chức năng */
    .custom-btn {
        font-size: 14px;
        padding: 12px;
        font-weight: bold;
        border-radius: 20px;
        transition: all 0.3s ease;
    }

        .custom-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

    /* Các nút sẽ được đặt gần nhau hơn */
    .d-flex {
        gap: 10px; /* Tạo khoảng cách giữa các nút */
    }

    /* Bảng */
    .table-responsive {
        margin-top: 30px;
        border-radius: 10px;
    }

    .table {
        font-size: 14px;
        border-radius: 10px;
        border: 1px solid #ddd;
    }

        .table thead {
            background-color: #f1f1f1;
            color: #333;
            font-size: 16px;
        }

        .table tbody tr {
            transition: background-color 0.3s ease;
        }

            .table tbody tr:hover {
                background-color: #f1f1f1;
            }

        .table tbody td {
            vertical-align: middle;
        }

        .table .btn-sm {
            padding: 6px 12px;
            font-size: 12px;
            border-radius: 20px;
        }

    /* Mobile responsiveness */
    media (max-width: 768px) {
        .custom-btn

    {
        font-size: 14px;
        padding: 10px;
    }

    .table {
        font-size: 12px;
    }

    .table-responsive {
        margin-top: 20px;
    }

    }
</style>